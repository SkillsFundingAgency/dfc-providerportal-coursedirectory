
@{
    ViewData["Title"] = "Index";
}


<div class="cd-dashboard provider">
    <span class="govuk-caption-xl">Course Directory</span>
    <h1 class="govuk-heading-xl cd-dashboard-title">Course management dashboard</h1>
    <hr class="spacer" />


    <div class="cd-success-summary" aria-labelledby="info-summary-title" role="alert" tabindex="-1" data-module="info-summary">
        <h2 class="cd-info-summary__title" id="info-summary-title">
            Restore complete
        </h2>
        <div class="cd-success-summary__body">
            <p> [number] courses restored</p>

        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-quarter">
            <div class="cd-status-panel">
                <h3 class="govuk-heading-l">12</h3>
                <div class="govuk-heading-s">Live courses</div>
            </div>
            <div>
                <ul class="govuk-list">
                    <li><a class="govuk-link" asp-controller="AddCourse" asp-action="Index">Publish a new course</a></li>
                    <li><a class="govuk-link" asp-controller="Lars" asp-action="Index"> Publish all your courses with a file upload</a></li>
                    <li><a class="govuk-link" asp-controller="Courses" asp-action="CourseListfullwidth5">Update a published course</a></li>
                </ul>
            </div>
        </div>

        <div class="govuk-grid-column-one-quarter">
            <div class="cd-status-panel">
                <h3 class="govuk-heading-l">132</h3>
                <div class="govuk-heading-s">Archived courses</div>
            </div>
            <div>
                <ul class="govuk-list">
                    <li>
                        <a asp-controller="Courses" asp-action="Archive">
                            Archive a courses
                        </a>
                    </li>
                    <li>
                        <a class="govuk-link" asp-controller="Courses" asp-action="Restore">
                            Republish an archived course
                        </a>
                        
                    </li>
                </ul>
            </div>
        </div>

        <div class="govuk-grid-column-one-quarter">
            <div class="cd-status-panel">
                <h3 class="govuk-heading-l">62</h3>
                <div class="govuk-heading-s">Pending courses</div>
            </div>
            <div>
                <ul class="govuk-list">
                    <li>
                        <a class="govuk-link" href="#">Fix and publish a pending course</a>
                    </li>
                    <li>
                        <a class="govuk-link" href="#">Delete a pending course </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <h2 class="govuk-heading-l">Recent activity</h2>
    <div class="cd-activity-item ">
        <h3 class="govuk-heading-m cd-activity-item-heading ">Maths and applied physics</h3>
        <span class="cd-activity-item-tag">Course ID</span> <span class="cd-activity-item-tag"> Venue</span> <span class="cd-activity-item-tag"> full-time</span> <span class="cd-activity-item-tag">25/03/2019</span>
    </div>
    <div class="cd-activity-item">
        <h3 class="govuk-heading-m cd-activity-item-heading ">Maths and applied physics</h3>
        <span class="cd-activity-item-tag">Course ID</span> <span class="cd-activity-item-tag"> Venue</span> <span class="cd-activity-item-tag"> full-time</span> <span class="cd-activity-item-tag">25/03/2019</span>
    </div>
    <div class="cd-activity-item">
        <h3 class="govuk-heading-m cd-activity-item-heading ">Maths and applied physics</h3>
        <span class="cd-activity-item-tag">Course ID</span> <span class="cd-activity-item-tag"> Venue</span> <span class="cd-activity-item-tag"> full-time</span> <span class="cd-activity-item-tag">25/03/2019</span>
    </div>
</div>

