
@{
    ViewData["Title"] = "Index";
}


<div class="cd-dashboard provider">

   


        <main class="govuk-main-wrapper govuk-body " id="main-content" role="main"aria-labelledby="pagetitle" >
            <h1 id="pagetitle" class="govuk-heading-xl">Publish to the course directory</h1>
            <h2 class="govuk-heading-l">Who is this service for?</h2>
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <p class="govuk-body">This service is for learning providers who are contracted to the Education and Skills Funding Agency and provide courses in England for people aged 16-18 or 19+.</p>
                    <p class="">Use this service to:</p>

                    <ul class="govuk-list govuk-list--bullet">
                        <li>add new courses to the course directory</li>
                        <li>edit and update courses in the course directory</li>
                        <li>remove courses from the course directory</li>
                    </ul>

                    <p class="">To use this service you need to sign in using DfE Sign-in.</p>

                    <a href="https://coursedirectoryproviderportal.org.uk/sa/login" role="button" draggable="false" class="govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8">
                        Start now
                    </a>


                </div>

                <aside class="govuk-grid-column-one-third">

                    <!-- The Related items component is not part of GOV.UK Frontend but will be styled if used in the Prototype Kit -->

                    <div class="app-related-items sidebar" role="complementary">
                        <div class="widget white">
                            <h3 class="govuk-heading-s" id="subsection-title">
                                Get help from the Course Directory support team
                            </h3>
                            <p>Call 0844 811 5073 or <a href="">email</a></p>
                        </div>
                    </div>

                </aside>
            </div>
        </main>

</div>

