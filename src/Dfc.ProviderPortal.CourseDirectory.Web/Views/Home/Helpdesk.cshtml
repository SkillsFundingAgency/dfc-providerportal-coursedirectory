
@{
    ViewData["Title"] = "Index";
}


<div class="cd-dashboard provider">
    <span class="govuk-caption-xl">Course Directory</span>
    <h1 class="govuk-heading-xl cd-dashboard-title">Helpdesk dashboard</h1>
    <hr class="spacer" />

    <div class="govuk-grid-row govuk-!-margin-bottom-9">

        <div class="govuk-grid-column-two-thirds">
            <form action="@ViewBag.Target" class="site-search ui-front govuk-!-margin-bottom-6" id="header-search" method="post" role="search">
                <h2 class="govuk-heading-s">Search for a provider</h2>
                <div class="header-search-content">

                    <div class="search-input-wrapper">
                        <label class="cd-search__label" for="search">@ViewBag.Placeholder</label>
                        <input class="govuk-input  search-input js-search-focus" id="search" name="SearchTerm" type="search">
                        <div class="cd-c-search__item cd-search__submit-wrapper">
                            <button type="submit" class=" submit">Search</button>
                        </div>
                    </div>
                </div>
            </form>
            @*<partial name="_CDHeroSearch" />*@

            <div class="govuk-grid-row govuk-!-margin-bottom-6">
                <div class="govuk-grid-column-full">
                    <div class="cd-status-panel grey">
                        <h2 class="govuk-heading-s">Provider Onboarding</h2>
                        <a asp-controller="Home" asp-action="Onboarding" class="govuk-link">View</a>
                    </div>
                </div>

            </div>
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-one-half">
                    <div class="cd-status-panel blue">
                        <h2 class="govuk-heading-s">Reports</h2>
                        <span class="govuk-heading-m">25</span>
                        <a asp-controller="Home" asp-action="Reports" class="govuk-link">View</a>
                    </div>
                </div>
                <div class="govuk-grid-column-one-half">
                    <div class="cd-status-panel grey">
                        <h2 class="govuk-heading-s">Quality assurance</h2>
                        <span class="govuk-heading-m">25</span>
                        <a asp-controller="Home" asp-action="qa" class="govuk-link">Start</a>
                    </div>
                </div>
            </div>

        </div>
        <div class="govuk-grid-column-one-third">

            <div class="cd-status-panel grey govuk-body">

                    <h2 class="govuk-heading-m ">Recent searches</h2>


                <ul class="govuk-list">
                    <li><a href="#" class="govuk-link">College 1</a></li>
                    <li><a href="#" class="govuk-link">Prince training</a></li>
                    <li><a href="#" class="govuk-link">Bristol</a></li>
                </ul>
            </div>
        </div>
    </div>

</div>

