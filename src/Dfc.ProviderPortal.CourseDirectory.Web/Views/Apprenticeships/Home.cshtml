
@{
    ViewData["Title"] = "Index";
}

<a asp-controller="home" asp-action="index" class="govuk-back-link">Back</a>
<div class="cd-dashboard provider apprenticeship-type govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-form-group">
            <fieldset class="govuk-fieldset">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">
                    <h1 class="govuk-fieldset__heading">
                        What would you like to do?
                    </h1>
                </legend>
                <span id="how-contacted-conditional-hint" class="govuk-hint">
                    Select one option.
                </span>
                <div class="govuk-radios">
                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="where-do-you-live-1" name="where-do-you-live" type="radio" value="/apprenticeships/add">
                        <label class="govuk-label govuk-radios__label" for="where-do-you-live-1">
                            Add a apprenticeship
                        </label>
                    </div>
                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="where-do-you-live-2" name="where-do-you-live" type="radio" value="/apprenticeships/employerbased">
                        <label class="govuk-label govuk-radios__label" for="where-do-you-live-2">
                            Add multiple apprenticeships via a bulk upload
                        </label>
                    </div>
                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="where-do-you-live-3" name="where-do-you-live" type="radio" value="/apprenticeships/YourApprenticeships">
                        <label class="govuk-label govuk-radios__label" for="where-do-you-live-3">
                            View or make changes to existing apprenticeship(s)
                        </label>
                    </div>

                </div>
            </fieldset>

        </div>
        <a class="govuk-button" asp-controller="courses" asp-action="index">Continue</a>
    </div>
</div>

