@{


    ViewData["Target"] = "/providers/results/";
    ViewData["Area"] = "Courses";
}

<div class="govuk-breadcrumbs">
    <ol class="govuk-breadcrumbs__list">
        <li class="govuk-breadcrumbs__list-item">
            <a class="govuk-breadcrumbs__link" href="/home/index6">Home</a>
        </li>
        <li class="govuk-breadcrumbs__list-item">
            <a class="govuk-breadcrumbs__link" href="/courses/index">@ViewBag.Area</a>
        </li>
        <li class="govuk-breadcrumbs__list-item" aria-current="page">Add a course</li>
    </ol>
</div>
<div class="govuk-width-container">
    <main class="govuk-main-wrapper govuk-main-wrapper--l" id="main-content" role="main">
        <div class="govuk-grid-row">
            <div>
                <div class="govuk-panel govuk-panel--confirmation">
                    <h1 class="govuk-panel__title">
                        Application complete
                    </h1>
                    <div class="govuk-panel__body">
                        Your reference number
                        <br><strong>HDJ2123F</strong>
                    </div>
                </div>
                <h2 class="govuk-heading-m">What happens next</h2>

                <p class="govuk-body">
                    Your course has been added to the course directory you can select form the options below to continue you journey.
                </p>


                <p class="govuk-body">
                    <a asp-controller="AddCourse" asp-action="Index">Advertise another course</a><br />
                    <a asp-controller="Courses" asp-action="CourseList">Manage your courses</a>
                </p>
            </div>
        </div>
    </main>
</div>
