<div class="govuk-grid-row">
    <main class="govuk-grid-column-full govuk-body ">
        <h1 class="govuk-heading-l">Migration report</h1>
        <div class="govuk-grid-row govuk-!-margin-bottom-9 homepage-item--container">
            <div class="govuk-grid-column-one-third homepage-item ">
                <div class="cd-migration-panel">
                    <h2 class="cd-migration-panel__title">Total courses</h2>
                    <span class="cd-migration-panel__number">5000</span>
                </div>
            </div>
            <div class="govuk-grid-column-one-third homepage-item ">
                <div class="cd-migration-panel  ">
                    <h2 class="cd-migration-panel__title">Current pending courses</h2>
                    <span class="cd-migration-panel__number">1000</span>
                </div>
            </div>
            <div class="govuk-grid-column-one-third homepage-item ">
                <div class="cd-migration-panel">
                    <h2 class="cd-migration-panel__title"> last month</h2>
                    <span class="cd-migration-panel__number">3000</span>
                </div>
            </div>
        </div>
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <table class="govuk-table sortable">
                    <caption class="govuk-table__caption govuk-!-margin-bottom-6">Migration data quality</caption>
                    <thead class="govuk-table__head">
                        <tr class="govuk-table__row">
                            <th data-sort="name"class="govuk-table__header app-custom-class" scope="col">Provider</th>
                            <th data-sort="number" class="govuk-table__header app-custom-class" scope="col">Migration rate %</th>
                            <th data-sort="number" class="govuk-table__header app-custom-class" scope="col">Against whole provision % </th>
                        </tr>
                    </thead>
                    <tbody class="govuk-table__body">
                        <tr class="govuk-table__row">
                            <th class="govuk-table__header" scope="row">London College</th>
                            <td class="govuk-table__cell">12</td>
                            <td class="govuk-table__cell">0.8</td>
                        </tr>
                        <tr class="govuk-table__row">
                            <th class="govuk-table__header" scope="row">Sheffield college</th>
                            <td class="govuk-table__cell">25</td>
                            <td class="govuk-table__cell">10</td>
                        </tr>
                        <tr class="govuk-table__row">
                            <th class="govuk-table__header" scope="row">Derby College</th>
                            <td class="govuk-table__cell">16</td>
                            <td class="govuk-table__cell">5</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </main>
</div>


