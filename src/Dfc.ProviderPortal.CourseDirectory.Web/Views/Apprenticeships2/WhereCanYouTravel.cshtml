
@{
    ViewData["Title"] = "Index";
}

<a asp-controller="Apprenticeships2" asp-action="CourseType"class="govuk-back-link">Back</a>
<div class="cd-dashboard govuk-grid-row govuk-body ">

    <div class="govuk-form-group govuk-grid-column-two-thirds">



        <div class="govuk-form-group employerNationalQuestion">
            <fieldset class="govuk-fieldset govuk-!-margin-bottom-6">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                    <h1 class="govuk-fieldset__heading">
                        Where can you travel?
                    </h1>
                </legend>
                <span class="govuk-hint">Choose one option</span>
                <div class="govuk-radios">
                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="where-do-you-live-1" name="where-do-you-live" type="radio" value="/apprenticeships2/summarynational">
                        <label class="govuk-label govuk-radios__label" for="where-do-you-live-1">
                            Anywhere in England
                        </label>
                    </div>
                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="where-do-you-live-2" name="where-do-you-live" type="radio" value="/apprenticeships2/DistanceFromLocation">
                        <label class="govuk-label govuk-radios__label" for="where-do-you-live-2">
                            In one or more geographical region
                        </label>
                    </div>

                </div>
            </fieldset>
            <a href="#" class="govuk-link">Add a new location</a>
        </div>


        <div class="govuk-!-margin-top-7">
            <a class="govuk-button govuk-!-margin-right-2" asp-controller="Apprenticeships2" asp-action="#">Continue</a>

        </div>



        <div ></div>
    </div>



</div>

